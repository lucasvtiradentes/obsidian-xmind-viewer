{
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": "explicit"
	},
	"editor.formatOnSave": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"explorer.fileNesting.enabled": true,
	"explorer.fileNesting.patterns": {
		"manifest.json": "esbuild.config.mjs, version-bump.mjs, versions.json, styles.css",
		"package.json": ".commitlintrc, .czrc, .editorconfig, .eslintignore, .npmrc, .eslintrc.json, .lintstagedrc.json, .prettierignore, .prettierrc, tsconfig.json, package-lock.json, yarn.lock, pnpm-lock.yaml",
		"README.md": "LICENSE, CHANGELOG.md"
	},
	"files.associations": {
		".czrc": "json"
	}
}
